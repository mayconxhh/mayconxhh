{{!-- Add layout --}}
{{!< default}}
<section class="godo-cover {{#if @blog.cover}}cover" style="background-image: url({{@blog.cover}}){{/if}}">
  <article class="godo-cover-wrap  animated bounceInDown">
    {{!-- Blog name --}}
    <img class="godo-cover-image" src="{{@blog.logo}}" alt="{{@blog.title}}" width="200" height="200">
    <h1 class="godo-cover-title">{{@blog.title}}</h1>
    {{!-- Blog description --}}
    <p class="godo-cover-description">{{@blog.description}}</p>
  </article>
</section>
{{! The tag below includes the post loop - partials/loop.hbs }}
{{> "loop"}}